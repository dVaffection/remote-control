<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RemoteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/button_shape_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/button_shape_shadowed</item>
    </style>

    <style name="RemoteButton.ActionButton">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DeleteButton" parent="RemoteButton.ActionButton">
        <item name="android:background">#f4db07</item>
    </style>

    <style name="EnterButton" parent="RemoteButton.ActionButton">
        <item name="android:background">#2fce04</item>
    </style>
    
</resources>
